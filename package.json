{
    "name": "connecthid-vscode",
    "displayName": "ConnectHID AOSP Build",
    "description": "Simplify AOSP building process with run configurations",
    "version": "0.0.1",
    "publisher": "connecthid",
    "engines": {
        "vscode": "^1.90.0"
    },
    "categories": [
        "Other"
    ],
    "activationEvents": [],
    "main": "./out/extension.js",
    "contributes": {
        "configuration": {
            "title": "ConnectHID",
            "properties": {
                "connecthid.adbHost": {
                    "type": "string",
                    "default": "127.0.0.1",
                    "description": "Host for ADB server. Use 127.0.0.1 for local or tunneled ADB. (Note: Forward port 5037 if remote)"
                }
            }
        },
        "viewsContainers": {
            "activitybar": [
                {
                    "id": "connecthid-aosp",
                    "title": "ConnectHID AOSP",
                    "icon": "$(rocket)"
                }
            ]
        },
        "views": {
            "connecthid-aosp": [
                {
                    "id": "aosp-configurations",
                    "name": "Run Configurations",
                    "icon": "$(settings-gear)"
                }
            ]
        },
        "commands": [
            {
                "command": "connecthid.addConfiguration",
                "title": "Add AOSP Configuration",
                "icon": "$(add)"
            },
            {
                "command": "connecthid.build",
                "title": "Build AOSP",
                "icon": "$(play)"
            }
        ],
        "menus": {
            "view/title": [
                {
                    "command": "connecthid.addConfiguration",
                    "when": "view == aosp-configurations",
                    "group": "navigation"
                }
            ],
            "view/item/context": [
                {
                    "command": "connecthid.build",
                    "when": "view == aosp-configurations",
                    "group": "inline"
                }
            ]
        },
        "taskDefinitions": [
            {
                "type": "aosp",
                "required": [
                    "target"
                ],
                "properties": {
                    "aospRoot": {
                        "type": "string",
                        "description": "Path to the AOSP root directory"
                    },
                    "target": {
                        "type": "string",
                        "description": "Lunch target (e.g., aosp_arm-eng)"
                    },
                    "variant": {
                        "type": "string",
                        "description": "Build variant (user, userdebug, eng)"
                    },
                    "buildType": {
                        "type": "string",
                        "description": "Clean, Incremental, or Full build"
                    }
                }
            }
        ]
    },
    "scripts": {
        "vscode:prepublish": "npm run compile",
        "compile": "tsc -p ./",
        "watch": "tsc -watch -p ./",
        "pretest": "npm run compile && npm run lint",
        "lint": "eslint src --ext ts",
        "test": "node ./out/test/runTest.js"
    },
    "devDependencies": {
        "@types/vscode": "^1.90.0",
        "@types/mocha": "^10.0.6",
        "@types/node": "18.x",
        "@typescript-eslint/eslint-plugin": "^7.11.0",
        "@typescript-eslint/parser": "^7.11.0",
        "eslint": "^8.57.0",
        "typescript": "^5.4.5",
        "@vscode/test-electron": "^2.3.9"
    }
}